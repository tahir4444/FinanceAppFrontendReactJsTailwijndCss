name: Frontend CI/CD

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ§¾ Checkout Code
        uses: actions/checkout@v3

      - name: ğŸ›  Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: ğŸ“¦ Install Dependencies
        run: npm install

      - name: âœï¸ Write .env file
        run: |
          echo "VITE_API_BASE_URL=${{ secrets.VITE_API_BASE_URL }}" > .env
          echo "VITE_API_URL=https://backend.tahirmohd.com" >> .env
          echo "FRONTEND_URL=https://finance.tahirmohd.com" >> .env

      - name: ğŸ”¨ Build React App (Vite)
        run: npm run build

      - name: ğŸ§ª Debug List Build Output
        run: |
          echo "ğŸ“ Contents of dist/"
          ls -la dist
          echo "ğŸ“ Contents of root/"
          ls -la .

      - name: ğŸš€ Deploy Build Contents via SCP (Server 1)
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.SERVER_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: 'dist/*'
          target: ${{ secrets.APP_PATH }}
          strip_components: 1
          rm: true

      - name: ğŸš€ Deploy .htaccess via SCP (Server 1)
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.SERVER_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: '.htaccess'
          target: ${{ secrets.APP_PATH }}
          strip_components: 0

      - name: ğŸ” Restart Apache (Server 1)
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SERVER_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            sudo systemctl restart apache2

      # === Second Server Deployment ===
      - name: ğŸš€ Deploy Build Contents via SCP (Server 2)
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.SERVER2_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: 'dist/*'
          target: ${{ secrets.SERVER2_APP_PATH }}
          strip_components: 1
          rm: true

      - name: ğŸš€ Deploy .htaccess via SCP (Server 2)
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.SERVER2_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          source: '.htaccess'
          target: ${{ secrets.SERVER2_APP_PATH }}
          strip_components: 0

      - name: ğŸ” Restart Apache (Server 2)
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SERVER2_IP }}
          username: ${{ secrets.SERVER_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            sudo systemctl restart apache2
